				<security:filter-chain pattern="/lineestimate/getsubtypeofwork" filters="none" />
				<security:filter-chain pattern="/contractorportal/**" filters="none" />
				<security:filter-chain pattern="/public/**" filters="none"/>
				<security:filter-chain pattern="/estimatephotograph/newform" filters="none" />
				<security:filter-chain pattern="/estimatephotograph/upload/**" filters="none" />
				<security:filter-chain pattern="/estimatephotograph/update/**" filters="none" />
