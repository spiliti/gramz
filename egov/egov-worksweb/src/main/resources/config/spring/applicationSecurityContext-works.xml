				<security:filter-chain pattern="/estimatephotograph/downloadphotgraphs" filters="none" />
				<security:filter-chain pattern="/letterofacceptance/ajaxworkorder-mbheader" filters="none" />
				<security:filter-chain pattern="/letterofacceptance/ajaxestimatenumbers" filters="none" />
				<security:filter-chain pattern="/letterofacceptance/ajaxsearchcontractors-loa" filters="none" />
