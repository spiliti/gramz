				<security:filter-chain pattern="/measurementbook/ajax-searchreactivities" filters="none" />
				<security:filter-chain pattern="/measurementbook/ajax-searchactivities" filters="none" />
				<security:filter-chain pattern="/measurementbook/rest-create-documents" filters="none" />
				<security:filter-chain pattern="/measurementbook/rest-create" filters="none" />
				<security:filter-chain pattern="/**"  filters="concurrentSessionFilter,securityContextPersistenceFilter,logoutFilter,authenticationProcessingFilter,securityContextHolderAwareRequestFilter,rememberMeAuthenticationFilter,anonymousAuthenticationFilter,exceptionTranslationFilter,filterSecurityInterceptor" />
			</list> 
		</constructor-arg>
	</bean>
</beans>